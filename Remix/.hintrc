{
  "extends": [
    "development"
  ],
  "hints": {
    "no-inline-styles": "off",
    "axe/forms": [
      "default",
      {
        "select-name": "off",
        "label": "off"
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "@layer"
        ]
      }
    ],
    "axe/structure": [
      "default",
      {
        "list": "off"
      }
    ],
    "axe/name-role-value": "off",
    "typescript-config/is-valid": "off",
    "axe/aria": "off"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not and_chr <= 116",
    "not chrome <= 117",
    "not edge <= 116",
    "not opera <= 102",
    "not samsung <= 22"
  ]
}